<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttendInformation">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="30sp"
        android:textColor="@color/accent_color"
        android:layout_below="@id/app_bar"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="@string/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_below="@id/title"
        android:textSize="25sp"
        android:textIsSelectable="false"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/attend_button"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:id="@+id/attend_button"
        android:background="@color/accent_color"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"></Button>

    <TextView
        android:text="@string/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/place"
        android:layout_below="@id/time"
        android:textSize="25sp"/>


    <TextView
        android:text="@string/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration"
        android:textSize="25sp"
        android:clickable="false"
        android:layout_below="@id/place"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject:"
        android:id="@+id/subject"
        android:layout_below="@id/duration"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People Going:"
        android:id="@+id/people_going"
        android:layout_below="@id/subject"
        android:textSize="25sp"/>

    <TextView
        android:text="@string/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_below="@id/people_going"
        android:textSize="25sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTime"
        android:layout_alignBaseline="@id/time"
        android:layout_toEndOf="@id/time"
        android:layout_toRightOf="@id/time"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editPlace"
        android:layout_alignBaseline="@id/place"
        android:layout_toEndOf="@id/place"
        android:layout_toRightOf="@id/place"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editDuration"
        android:layout_alignBaseline="@id/duration"
        android:layout_toEndOf="@id/duration"
        android:layout_toRightOf="@id/duration"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editDescription"
        android:layout_alignBaseline="@id/description"
        android:layout_toEndOf="@id/description"
        android:layout_toRightOf="@id/description"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_people_going"
        android:layout_alignBaseline="@id/people_going"
        android:layout_toEndOf="@id/people_going"
        android:layout_toRightOf="@id/people_going"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editSubject"
        android:layout_alignBaseline="@id/subject"
        android:layout_toEndOf="@id/subject"
        android:layout_toRightOf="@id/subject"
        android:textSize="15sp" />


</RelativeLayout>